<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppSettingsStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="VideoPreviewTheme" parent="TranslucentTheme">
        <item name="android:windowBackground">@color/video_preview_background</item>
    </style>

    <!--TOOLBAR-->
    <style name="AppBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolbarPopupStyle" parent="ThemeOverlay.AppCompat.Light" />

    <!--VIEWS-->

</resources>
